<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_black"
        android:text="Photos :"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"
        android:textSize="30dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_photo"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_bg_create"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"
                android:text="You need to post at least 3 picture."/>
            <TextView
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"
                android:text="please provide picture including bedroom, living room, kitchen and balcony(if any)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alert"
                android:textSize="20dp"
                android:textAlignment="center"
                android:visibility="gone"
                android:id="@+id/alert_image"/>
            <Button
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="create property"
                android:background="@drawable/loginbutton"
                android:id="@+id/btn_upload_image"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
